#ifndef MCP23S17_REG_H_
#define MCP23S17_REG_H_

#define IO_EXPANDER_BASE    (*((volatile uint32_t *) 0x00))


//REGISTER ADDRESSES -->IOCON.BANK = 0<--//
typedef struct {
    uint8_t     IODIRA : 8;
    uint8_t     IODIRB : 8;
    uint8_t     IPOLA : 8;
    uint8_t     IPOLB : 8;
    uint8_t     GPINTENA : 8;
    uint8_t     GPINTENB : 8;
    uint8_t     DEFVALA : 8;
    uint8_t     DEFVALB : 8;
    uint8_t     INTCONA : 8;
    uint8_t     INTCONB : 8;
    uint8_t     IOCON_0 : 8;
    uint8_t     IOCON_1 : 8;
    uint8_t     GPPUA : 8;
    uint8_t     GPPUB : 8;
    uint8_t     INTFA : 8;
    uint8_t     INTFB : 8;
    uint8_t     INTCAPA : 8;
    uint8_t     INTCAPB : 8;
    uint8_t     xGPIOA : 8;
    uint8_t     xGPIOB : 8;
    uint8_t     OLATA : 8;
    uint8_t     OLATB : 8;
} RegAddress_t;
#define IO_EXPANDER      ((RegAddress_t*) IO_EXPANDER_BASE)



#endif /* MCP23S17_REG_H_ */
