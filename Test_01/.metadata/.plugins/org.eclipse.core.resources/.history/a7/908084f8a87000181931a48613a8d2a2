#ifndef MCP23S17_REG_H_
#define MCP23S17_REG_H_

#define IO_EXPANDER_BASE    (*((volatile uint32_t *)0x00))


//REGISTER ADDRESSES -->IOCON.BANK = 0<--//
typedef struct Registers {
    uint8_t     IODIRA;
    uint8_t     IODIRB;
    uint8_t     IPOLA;
    uint8_t     IPOLB;
    uint8_t     GPINTENA;
    uint8_t     GPINTENB;
    uint8_t     DEFVALA;
    uint8_t     DEFVALB;
    uint8_t     INTCONA;
    uint8_t     INTCONB;
    uint8_t     IOCON_0;
    uint8_t     IOCON_1;
    uint8_t     GPPUA;
    uint8_t     GPPUB;
    uint8_t     INTFA;
    uint8_t     INTFB;
    uint8_t     INTCAPA;
    uint8_t     INTCAPB;
    uint8_t     xGPIOA;
    uint8_t     xGPIOB;
    uint8_t     OLATA;
    uint8_t     OLATB;
} RegAddress_t;
#define IO_EXPANDER      ((RegAddress_t*) IO_EXPANDER_BASE)



#endif /* MCP23S17_REG_H_ */
