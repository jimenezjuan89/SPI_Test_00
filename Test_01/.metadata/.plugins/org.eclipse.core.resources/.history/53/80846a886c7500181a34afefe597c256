///////////////REGISTER ADDRESSES -->IOCON.BANK = 0<--////////////
#define     IODIRA      0x00
#define     IODIRB      0x01
#define     IPOLA       0x02
#define     IPOLB       0x03
#define     GPINTENA    0x04
#define     GPINTENB    0x05
#define     DEFVALA     0x06
#define     DEFVALB     0x07
#define     INTCONA     0x08
#define     INTCONB     0x09
#define     IOCON_0     0x0A
#define     IOCON_1     0x0B
#define     GPPUA       0x0C
#define     GPPUB       0x0D
#define     INTFA       0x0E
#define     INTFB       0x0F
#define     INTCAPA     0x10
#define     INTCAPB     0x11
#define     xGPIOA      0x12
#define     xGPIOB      0x13
#define     xOLATA      0x14
#define     xOLATB      0x15

#define ExpanderAddress_00     0x40
#define ExpanderAddress_01     0x41

uint8_t ExpanderAddress = 40;
#define ADDRESS_BASE    0X40


#define ADDRESS_00      (ADDRESS_BASE | (0X00))
//#define ADDRESS_01      0x42
#define ADDRESS_01      (ADDRESS_BASE | (0X02))
//#define ADDRESS_02      0x44
#define ADDRESS_02      (ADDRESS_BASE | (0X04))
//#define ADDRESS_03      0x46
#define ADDRESS_03      (ADDRESS_BASE | (0X06))
//#define ADDRESS_04      0x48
#define ADDRESS_04      (ADDRESS_BASE | (0X08))
//#define ADDRESS_05      0x4
#define ADDRESS_05      (ADDRESS_BASE | (0X0A))
//#define ADDRESS_06      0x46
#define ADDRESS_06      (ADDRESS_BASE | (0X0C))
//#define ADDRESS_07      0x47
#define ADDRESS_07      (ADDRESS_BASE | (0X0E))
