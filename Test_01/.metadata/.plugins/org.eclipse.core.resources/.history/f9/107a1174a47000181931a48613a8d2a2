#ifndef MCP23S17_REG_H_
#define MCP23S17_REG_H_


//REGISTER ADDRESSES -->IOCON.BANK = 0<--//
typedef struct Registers {
    uint8_t     IODIRA,
                IODIRB,
                IPOLA,
                IPOLB,
                GPINTENA,
                GPINTENB,
                DEFVALA,
                DEFVALB,
                INTCONA,
                INTCONB,
                IOCON_0,
                IOCON_1,
                GPPUA,
                GPPUB,
                INTFA,
                INTFB,
                INTCAPA,
                INTCAPB,
                xGPIOA,
                xGPIOB,
                OLATA,
                OLATB;
} RegAddress_t;
#define IO_EXPANDER      ((RegAddress_t*) IO_EXPANDER_BASE)



#endif /* MCP23S17_REG_H_ */
