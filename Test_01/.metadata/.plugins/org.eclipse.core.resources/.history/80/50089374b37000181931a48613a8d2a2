typedef struct {
__I    int     IODIRA;
__I    uint8_t     IODIRB;
__I    uint8_t     IPOLA;
__I    uint8_t     IPOLB;
__I    uint8_t     GPINTENA;
__I    uint8_t     GPINTENB;
__I    uint8_t     DEFVALA;
__I    uint8_t     DEFVALB;
__I    uint8_t     INTCONA;
__I    uint8_t     INTCONB;
__I    uint8_t     IOCON_0;
__I    uint8_t     IOCON_1;
__I    uint8_t     GPPUA;
__I    uint8_t     GPPUB;
__I    uint8_t     INTFA;
__I    uint8_t     INTFB;
__I    uint8_t     INTCAPA;
__I    uint8_t     INTCAPB;
__IO    uint8_t     xGPIOA;
__IO    uint8_t     xGPIOB;
__IO    uint8_t     OLATA;
__IO    uint8_t     OLATB;
} RegAddress_t;

#define IO_EXPANDER      ((RegAddress_t*) IO_EXPANDER_BASE)


#define     IODIRA      0x00
#define     IODIRB      0x01
#define     IPOLA       0x02
#define     IPOLB       0x03
#define     GPINTENA    0x04
#define     GPINTENB    0x05
#define     DEFVALA     0x06
#define     DEFVALB     0x07
#define     INTCONA     0x08
#define     INTCONB     0x09
#define     IOCON_0     0x0A
#define     IOCON_1     0x0B
#define     GPPUA       0x0C
#define     GPPUB       0x0D
#define     INTFA       0x0E
#define     INTFB       0x0F
#define     INTCAPA     0x10
#define     INTCAPB     0x11
//#define     xGPIOA      0x12
#define     xGPIOB      0x13
#define     xOLATA      0x14
#define     xOLATB      0x15

#define ExpanderAddress_00     0x40
#define ExpanderAddress_01     0x41



#endif /* MCP23S17_REG_H_ */
